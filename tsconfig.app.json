{
  "compilerOptions": {
    "composite": true,                     // Keep this line
    "target": "ES2020",                    // You can adjust this to a valid target
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"], // Ensure these are valid options
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Ensure to allow emit */
    "noEmit": false // Set this to false or remove it
  },
  "include": ["src"]
}
