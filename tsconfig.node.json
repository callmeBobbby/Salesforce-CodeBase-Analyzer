{
  "compilerOptions": {
    "composite": true, // Keep this line
    "target": "ES2022", // Adjust to a valid target
    "lib": ["ES2022"], // Adjust to a valid option
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": false, // Ensure emit is allowed

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["vite.config.ts"]
}
